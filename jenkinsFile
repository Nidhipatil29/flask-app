
pipeline {
    agent any

    stages {
        stage('build') {
            steps {
               git branch: 'main', url: 'https://github.com/Nidhipatil29/flask-app.git'
               sh 'ls -a'
               sh 'docker build -t myprojectimage .'
            }
        }
        
        stage('deploy') {
            steps {
              sh 'docker run --name mytestcontainer -rm -itd -p 5000:5000 myprojectimage'
            }
        }

       /* stage('stop container mytestcontainer ') {
            steps {
              sh 'docker stop mytestcontainer '
            }
        }*/
    }
}
